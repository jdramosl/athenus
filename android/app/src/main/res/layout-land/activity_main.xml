<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:id="@+id/drawer_layout">



    <co.edu.unal.athenus.BoardView
        android:id="@+id/board"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_marginTop="100dp" />

    <TextView
        android:id="@+id/information"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:gravity="center_horizontal"
        android:text="@string/info"
        android:textSize="20sp" />


    <!-- BotÃ³n para iniciar un nuevo juego -->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp">

        <TextView
            android:id="@+id/human_wins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Human: 0" />

        <TextView
            android:id="@+id/ties"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/human_wins"
            android:text="Ties: 0" />

        <TextView
            android:id="@+id/android_wins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/ties"
            android:text="Android: 0" />
    </RelativeLayout>

    <Button
        android:id="@+id/button_new_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_game_button"
        android:layout_marginTop="100dp"/>

</LinearLayout>

